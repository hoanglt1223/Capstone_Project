{
  "directories": {
    "buildResources": "assets"
  },
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "extends": null,
  "appId": "io.g1eny0ung.electron-typescript-react-boilerplate",
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": "dmg"
  },
  "dmg": {
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "category": "Development",
    "target": ["deb", "tar.gz"]
  }
}
